<div class="container mt-5">
  <h2 class="mb-4">Your Question and Answer</h2>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Your Question</h5>
      <p class="card-text"><%= @question %></p>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Our Answer</h5>
      <p class="card-text"><%= @answer %></p>
    </div>
  </div>

  <div class="mt-4">
    <a href="/ask" class="btn btn-secondary">Ask Another Question</a>
  </div>
</div>
